<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/layout_bg"
        android:layout_weight="1"
        android:id="@+id/summaryParametersLayout">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tipParameterSummary"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:text="Tip"
                android:textSize="20dp"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tipParameterValue"
                android:layout_weight="1"
                android:text="10%"
                android:textSize="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="0dp" />

            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/peopleSummary"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:text="People"
                android:textSize="20dp"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/peopleValue"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="0dp" />

            </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/billAmountLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/billSummary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="bottom"
            android:paddingTop="10dp"
            android:text="@string/secondbillAmountString"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/billSummaryValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="bottom|right"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tipAmountLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tipSummary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="bottom"
            android:text="@string/secondTipAmountString"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tipSummaryValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="bottom|right"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/totalAmoutLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalSummary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="@string/secondTotalAmountString"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/totalSummaryValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:padding="10dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/singleBillSectionLayout"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/splitTextView"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text=""
            android:textSize="25sp"
            android:textColor="#000000"
            />

    </LinearLayout>
        <!--<View-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="75dp"-->
            <!--android:background="@android:color/darker_gray" -->
            <!---->

            <!--/>-->

    <LinearLayout
        android:id="@+id/tipPerPersonLAyout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tipPerPersonString"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/tipPerPersonString"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tipPerPersonValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/totalPerPersonLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="30dp">


        <TextView
            android:id="@+id/eachPersonPayString"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/eachPersonPayString"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/eachPersonPayValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.6"
        android:id="@+id/finishLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="done"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickDone" />
    </LinearLayout>

</LinearLayout>